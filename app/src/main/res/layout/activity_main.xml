<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bgcolor">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_anchor="@+id/toolbar"
                app:layout_anchorGravity="center"
                app:title="Home"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <android.widget.Button
        android:id="@+id/length_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu_button"
        android:drawableRight="@drawable/ic_arrow_right"
        android:elevation="10dp"
        android:onClick="openLengthPage"
        android:padding="15dp"
        android:text="Length"
        android:textAlignment="textStart"
        android:textColor="@color/txt_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout" />

    <android.widget.Button
        android:id="@+id/Weight_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu_button"
        android:drawableRight="@drawable/ic_arrow_right"
        android:elevation="10dp"
        android:onClick="openWeightPage"
        android:padding="15dp"
        android:text="Weight"
        android:textAlignment="textStart"
        android:textColor="@color/txt_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/length_btn" />

    <android.widget.Button
        android:id="@+id/digitalStorage_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu_button"
        android:drawableRight="@drawable/ic_arrow_right"
        android:elevation="10dp"
        android:onClick="openDigitalPage"
        android:padding="15dp"
        android:text="Digital Storage"
        android:textAlignment="textStart"
        android:textColor="@color/txt_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Weight_btn" />

    <android.widget.Button
        android:id="@+id/time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/menu_button"
        android:drawableRight="@drawable/ic_arrow_right"
        android:elevation="10dp"
        android:onClick="openTimePage"
        android:padding="15dp"
        android:text="Time"
        android:textAlignment="textStart"
        android:textColor="@color/txt_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/digitalStorage_btn" />

    <TextView
        android:id="@+id/Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="MADE BY: MOHAK JAIN\nPOWERED BY: JAVA"
        android:textSize="30sp"
        android:fontFamily="@font/boldfont"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>